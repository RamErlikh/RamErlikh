        </footer>
    </div>
    
    <div class="hidden-message" id="hidden-message">
        Try the Konami Code: ↑ ↑ ↓ ↓ ← → ← → B A Enter
    </div>
    
    <script>
        // Simple script with minimal dynamic JS
        document.addEventListener('DOMContentLoaded', function() {
            // Create stars
            createStars();
            
            // Cube interaction
            setupCube();
            
            // Cursor trail
            setupCursorTrail();
            
            // Easter eggs
            setupEasterEggs();
            
            // Functions
            function createStars() {
                const starsContainer = document.getElementById('stars');
                const starCount = 150;
                
                for (let i = 0; i < starCount; i++) {
                    const star = document.createElement('div');
                    star.classList.add('star');
                    
                    // Random size
                    const size = Math.random() * 2 + 1;
                    star.style.width = size + 'px';
                    star.style.height = size + 'px';
                    
                    // Random position
                    star.style.left = Math.random() * 100 + '%';
                    star.style.top = Math.random() * 100 + '%';
                    
                    // Random animation delay
                    star.style.animationDelay = Math.random() * 4 + 's';
                    
                    starsContainer.appendChild(star);
                }
            }
            
            function setupCube() {
                const cube = document.getElementById('cube');
                
                cube.addEventListener('click', function() {
                    this.classList.toggle('cube-exploded');
                    
                    if (this.classList.contains('cube-exploded')) {
                        this.classList.add('paused');
                    } else {
                        this.classList.remove('paused');
                    }
                });
                
                // Hover effect
                const cubeFaces = cube.querySelectorAll('.cube-face');
                cubeFaces.forEach(function(face) {
                    face.addEventListener('mouseenter', function() {
                        if (!cube.classList.contains('cube-exploded')) {
                            cube.classList.add('paused');
                        }
                    });
                    
                    face.addEventListener('mouseleave', function() {
                        if (!cube.classList.contains('cube-exploded')) {
                            cube.classList.remove('paused');
                        }
                    });
                });
            }
            
            function setupCursorTrail() {
                const cursorContainer = document.getElementById('cursor-container');
                const trailCount = 10;
                const trails = [];
                
                // Create trail elements
                for (let i = 0; i < trailCount; i++) {
                    const trail = document.createElement('div');
                    trail.classList.add('cursor-trail');
                    cursorContainer.appendChild(trail);
                    trails.push(trail);
                }
                
                // Track mouse position
                let mouseX = 0;
                let mouseY = 0;
                
                document.addEventListener('mousemove', function(e) {
                    mouseX = e.clientX;
                    mouseY = e.clientY;
                    
                    // Show the first trail immediately
                    trails[0].style.left = mouseX + 'px';
                    trails[0].style.top = mouseY + 'px';
                    trails[0].style.opacity = '1';
                });
                
                // Animate trails
                function animateTrails() {
                    for (let i = trails.length - 1; i > 0; i--) {
                        setTimeout(function() {
                            trails[i].style.left = trails[i-1].style.left;
                            trails[i].style.top = trails[i-1].style.top;
                            trails[i].style.opacity = '1';
                            
                            setTimeout(function() {
                                trails[i].style.opacity = '0';
                            }, 100);
                        }, i * 40);
                    }
                    
                    requestAnimationFrame(animateTrails);
                }
                
                animateTrails();
            }
            
            function setupEasterEggs() {
                // Konami code sequence
                const konamiCode = ['ArrowUp', 'ArrowUp', 'ArrowDown', 'ArrowDown', 'ArrowLeft', 'ArrowRight', 'ArrowLeft', 'ArrowRight', 'b', 'a', 'Enter'];
                let konamiIndex = 0;
                
                // Matrix mode with K key
                document.addEventListener('keydown', function(e) {
                    // K key for Matrix mode
                    if (e.key === 'k' || e.key === 'K') {
                        document.body.classList.toggle('matrix-mode');
                    }
                    
                    // Konami code
                    if (e.key === konamiCode[konamiIndex]) {
                        konamiIndex++;
                        
                        if (konamiIndex === konamiCode.length) {
                            // Activate rainbow mode
                            document.body.style.animation = 'none';
                            
                            // Add rainbow animation
                            const rainbowStyle = document.createElement('style');
                            rainbowStyle.textContent = `
                                @keyframes rainbowBackground {
                                    0% { background-color: red; }
                                    14% { background-color: orange; }
                                    28% { background-color: yellow; }
                                    42% { background-color: green; }
                                    56% { background-color: blue; }
                                    70% { background-color: indigo; }
                                    84% { background-color: violet; }
                                    100% { background-color: red; }
                                }
                                body {
                                    animation: rainbowBackground 5s linear infinite !important;
                                }
                            `;
                            document.head.appendChild(rainbowStyle);
                            
                            alert('Konami Code Activated! Rainbow mode engaged!');
                            
                            // Reset after 5 seconds
                            setTimeout(function() {
                                document.head.removeChild(rainbowStyle);
                                document.body.style.animation = '';
                            }, 5000);
                            
                            konamiIndex = 0;
                        }
                    } else {
                        konamiIndex = 0;
                    }
                });
                
                // Show hidden message after some time
                setTimeout(function() {
                    const hiddenMessage = document.getElementById('hidden-message');
                    hiddenMessage.classList.add('visible');
                    
                    setTimeout(function() {
                        hiddenMessage.classList.remove('visible');
                    }, 5000);
                }, 30000);
            }
            
            // Smooth scrolling
            document.querySelectorAll('a[href^="#"]').forEach(function(anchor) {
                anchor.addEventListener('click', function(e) {
                    e.preventDefault();
                    
                    const targetId = this.getAttribute('href');
                    document.querySelector(targetId).scrollIntoView({
                        behavior: 'smooth'
                    });
                });
            });
        });
    </script>
</body>
</html>
